<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PhilipsHueBridge">

	<insert id="insertPhilipsHueBridge" parameterType="HashMap">
		INSERT INTO
		philips_hue_bridge_ip (philipsHueBridgeIp, uId)
		VALUES
		(#{philipsHueBridgeIp}, #{uId});
	</insert>


	<select id="getPhilipsHueBridgeById" parameterType="HashMap"
		resultType="String">
		SELECT philipsHueBridgeIp
		FROM philips_hue_bridge_ip
		WHERE
		uId LIKE #{uId};
	</select>

	<update id="updatePhilipsHueBridge" parameterType="HashMap">
		UPDATE
		philips_hue_bridge_ip
		SET philipsHueBridgeIp= #{philipsHueBridgeIp}
		WHERE uId LIKE #{uId};
	</update>

</mapper>